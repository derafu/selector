{# layouts/default.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Derafu: Selector - Elegant Data Structure Navigation for PHP{% endblock %}

{% block body %}
    {% block header %}
        {% include 'components/header.html.twig' %}
    {% endblock %}

    {% block main %}
        <div class="container">
            <div class="row">
                <main class="col-md-10">
                    {% block content %}{% endblock %}
                </main>
                <div class="col-md-2 py-4">
                    <div class="list-group mb-4">
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                            <div class="fw-bold">Package Info</div>
                            <span class="smal text-muted">derafu/selector</span>
                            </div>
                        </li>
                        <a class="list-group-item list-group-item-action {% if request.uri.path == base_path ~ '/' %}active{% endif %}" href="{{ base_path }}/">
                            README
                        </a>
                    </div>
                    <div class="list-group mb-4">
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                            <div class="fw-bold">Docs</div>
                            <span class="smal text-muted">Guides & Examples</span>
                            </div>
                        </li>

                        <a class="list-group-item list-group-item-action {% if request.uri.path == base_path ~ '/basic-usage-guide' %}active{% endif %}" href="{{ base_path }}/basic-usage-guide">
                            Basic Usage Guide
                        </a>
                        <a class="list-group-item list-group-item-action {% if request.uri.path == base_path ~ '/arrays-and-filters-guide' %}active{% endif %}" href="{{ base_path }}/arrays-and-filters-guide">
                            Working with Arrays and Filters
                        </a>
                        <a class="list-group-item list-group-item-action {% if request.uri.path == base_path ~ '/advanced-syntax-guide' %}active{% endif %}" href="{{ base_path }}/advanced-syntax-guide">
                            Advanced Selector Syntax Guide
                        </a>
                        <a class="list-group-item list-group-item-action {% if request.uri.path == base_path ~ '/jsonpath-guide' %}active{% endif %}" href="{{ base_path }}/jsonpath-guide">
                            JSONPath Integration
                        </a>
                        <a class="list-group-item list-group-item-action {% if request.uri.path == base_path ~ '/jmespath-guide' %}active{% endif %}" href="{{ base_path }}/jmespath-guide">
                            JMESPath Integration
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}

    {% block footer %}
        {% include 'components/footer.html.twig' %}
    {% endblock %}
{% endblock %}
